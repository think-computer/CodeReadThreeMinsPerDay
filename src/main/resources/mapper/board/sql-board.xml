<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.ac.jejunu.educom.yechankim.mapper.BoardMapper">
    <select id = "selectBoardList" resultType="kr.ac.jejunu.educom.yechankim.dto.BoardDto">
        <![CDATA[
            SELECT
                board_idx,
                title,
                hit_cnt,
                DATE_FORMAT(created_datetime, '%Y.%m.%d %H:%i:%s') as created_datetime
            FROM
                t_board
            WHERE
                deleted_yn = 'N'
            ORDER BY board_idx DESC
        ]]>
    </select>
</mapper>